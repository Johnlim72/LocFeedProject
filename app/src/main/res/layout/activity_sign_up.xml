<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:padding="16dp" >

    <LinearLayout
        android:id="@+id/signUpInfo"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/firstName_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name " />

        <EditText
            android:id="@+id/first_name_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <TextView
            android:id="@+id/lastName_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name" />

        <EditText
            android:id="@+id/last_name_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <TextView
            android:id="@+id/userId_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User ID" />

        <EditText
            android:id="@+id/user_id_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />


        <TextView
            android:id="@+id/email_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail" />

        <EditText
            android:id="@+id/email_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />


        <TextView
            android:id="@+id/password_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password" />

        <EditText
            android:id="@+id/password_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <TextView
            android:id="@+id/re_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re-enter Password" />

        <EditText
            android:id="@+id/re_password_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />

    </LinearLayout>

    <Button
        android:id="@+id/submit_signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUpInfo"
        android:layout_centerHorizontal="true"
        android:background="#eeeeee"
        android:onClick="onSubmitClick"
        android:text="Submit" />

    <Button
        android:id="@+id/cancel_signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/submit_signUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="#eeeeee"
        android:onClick="onCancelClick"
        android:text="Cancel" />

</RelativeLayout>
